@app.route('/post',methods=['POST'])
def add_entry():
	g.db=connect_db()	
	g.db.execute("INSERT INTO blogspot (author,post) VALUES (?,?)",[request.form['name'],request.form['blogpost']])
	g.db.commit()
	g.db.close()
	return redirect(url_for('show_entries'))
app.config.from_object(__name__)
def connect_db():
	return sqlite3.connect(app.config['DATABASE'])
DATABASE='/home/nidhin/Documents/Networking/flask/microblog/app/database.db'



